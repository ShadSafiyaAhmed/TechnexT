    <style>
    .eyeicon {
    position: absolute;
    top: 43%;
    left: 83%;
    right: 20px;
    display: inline-block;
    transform: translateY(-50%);
    cursor: pointer;
    width: 20px; /* Change this value to adjust the size */
    height: auto;
    z-index: 1;
    }   
    .field-icon {
    position: absolute;
    top: 50%;
    right: 10px; /* Adjust the right distance as needed */
    transform: translateY(-50%);
    cursor: pointer;
    }
    </style>
</head>

<body>
    <main>
        <header class="main-header style-2 navbar">
            <div class="col-brand">
                <a href="/index" class="brand-wrap">
                    <img src="../assets2/imgs/theme/logo2.svg" class="logo" alt="Evara Dashboard">
                </a>
            </div>
            <div class="col-nav">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link btn-icon darkmode" href="#"> <i class="material-icons md-nights_stay"></i> </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="requestfullscreen nav-link btn-icon"><i class="material-icons md-cast"></i></a>
                    </li>
                
                </ul>
            </div>
        </header>
        <section class="content-main mt-40 ">
            <div class="card mx-auto card-login" >
                <div class="card-body">
                    <h4 class="card-title mb-4">Sign in</h4>
                   
                    <form method="post" action="/login" onsubmit="return validateForm()">
                        <div class="mb-3">
                            <input class="form-control" name="email" placeholder="Username or email" type="text" value=""  id="emailInput" >
                            <span id="emailError" class="text-danger"></span>
                        </div> <!-- form-group// -->
                        <div class="mb-3">
                            <div class="position-relative">
                            <input class="form-control" name="password" placeholder="Password" type="password" value="" id="passwordInput" >
                            <!-- <img src="../assets2/imgs/icons/eye-close.png"alt="" class="eyeicon" id="eyeicon"> -->
                            <span toggle="#passwordInput" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            <span id="passwordError" class="text-danger"></span>
                            </div>
                        </div> <!-- form-group// --> 

                        <div class="mb-3">
                            <a  data-mdb-toggle="modal" data-mdb-target="#exampleModal"  id="forgetmodal">Forgot password?</a>  
                        </div> 
                        <!-- form-group form-check .// -->
                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100" onclick="performLogin()"> Login </button>
                        </div> <!-- form-group// -->
                        
                        <p class="text-center font-xm mb-30 text-danger" id="messageError">
                            <%= typeof message !== 'undefined' ? message : '' %>
                        </p>
                
                    </form>

                    <p class="text-center mb-4">Don't have account? <a href="/register">Sign up</a></p>
                </div>
            </div>
    
              <!-- Modal -->
              <div class="modal top fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
              aria-hidden="true" data-mdb-backdrop="true" data-mdb-keyboard="true">
              <div class="modal-dialog" style="width: 300px;">
              <div class="modal-content text-center">
                  <div class="modal-header h5 text-white bg-primary justify-content-center">
                      Password Reset
                  </div>
                  <div class="modal-body px-5">
                      <p class="py-2">
                          Enter your email address and we'll send you an email with instructions to reset your password.
                      </p>
                      <form action="/forget" method="post">
                      <div class="form-outline">
                          <input type="email" id="typeEmail" name="email" class="form-control my-3"  placeholder="Email input"/>
                        
                      </div>
                      <button type="submit" class="btn btn-primary  w-100">send Reset link</button>
                      </form>
                      <div class="d-flex justify-content-between mt-4">
                      </div>
                  </div>
              </div>
              </div>
              </div>

        </section>
    
    </main>
    <script src="../assets2/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="../assets2/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="../assets2/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="../assets2/js/main.js" type="text/javascript"></script>
    <!---for validation and  icon-->
    <script src="../assets2/js/custome.js" type="text/javascript"></script>
    <!--form validation-->

 <script>
    $(document).ready(function () {
    // Toggle password visibility
    $(".toggle-password").click(function () {
        $(this).toggleClass("fa-eye fa-eye-slash");
        var input = $($(this).attr("toggle"));
        if (input.attr("type") == "password") {
            input.attr("type", "text");
        } else {
            input.attr("type", "password");
        }
    });
    $('#forgetmodal').click(function(e) {
            e.preventDefault();
            $('#exampleModal').modal('show');
    });
});
 </script>  
</body>
