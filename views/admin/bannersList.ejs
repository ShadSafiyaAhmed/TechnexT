<%-include('../layouts2/header.ejs')%>
<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Banners</h2>
            <p>Lorem ipsum dolor sit amet.</p>
        </div>
        <div>
            <a href="" class="btn btn-primary btn-sm rounded">Create new</a>
        </div>
    </div>
    <div class="card mb-4">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% Banners.forEach(banner => { %>
                        <tr>
                            <td class="text-center">
                                <div class="left">
                                    <img src="/BannerImages/<%= banner.image %>" class="img-md img-thumbnail" alt="Item">
                                </div>
                            </td>
                            <td class="align-middle">
                                <a class="itemside" href="#">
                                    <h6 class="mb-0"><%= banner.name %></h6>
                                </a>
                            </td>
                            <td class="align-middle">
                                <textarea placeholder="Type here" name="description" class="form-control" rows="4"><%= banner.discription %></textarea>
                            </td>
                            <td class="align-middle text-center">
                                <% if (!banner.unlist) { %>
                                    <span class="badge rounded-pill alert-success">Banner Published</span>
                                <% } else { %>
                                    <span class="badge rounded-pill alert-danger">Banner removed</span>
                                <% } %>
                            </td>
                            <td class="align-middle text-center">
                                <a href="/admin/deleteBanner?id=<%=banner.id%>" class="btn btn-sm font-sm btn-light rounded">
                                    <i class="material-icons md-delete_forever"></i> Delete
                                </a>
                                <div class="dropdown">
                                    <a href="#" data-bs-toggle="dropdown" class="btn btn-light rounded btn-sm font-sm">
                                        <i class="material-icons md-more_horiz"></i>
                                    </a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/admin/unlistBanner?id=<%= banner.id %>">Hide Banner</a>
                                        <a class="dropdown-item" href="/admin/listBanner?id=<%= banner.id %>">Publish Banner</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div> <!-- card end// -->
</section>
<%-include('../layouts2/footer.ejs')%>