<%- include('../layouts2/header.ejs') %>

<main class="main-wrap" style="margin-left: -6px;">
   
    <section class="content-main">
        <div class="content-header">
          <h2 class="content-title">Coupons </h2>
        </div>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-lg-12">
                <header class="border-bottom mb-4 pb-4">
                  <div class="row">
                    <!-- <div class="col-lg-5 col-6">
                      <div class="input-group">
                        <input type="text" placeholder="Search..." class="form-control">
                      </div>
                    </div> -->
                    <div class="col-lg-5 col-6 ">
                      <button class="btn btn-primary btn-lg btn-block ml-50px" onclick="location.href='/admin/add-coupon';">
                        Create Coupons
                      </button>
      
                    </div>
                  </div>
                </header>
      
                <div class="table-responsive">
                  <table class="table table-hover" id="myTable">
                    <thead>
                      <tr>
                        <th>No:</th>
                        <th>Coupon Code</th>
                        <th>Min Order Vlaue</th>
                        <th>Discount percentage%</th>
                        <th>Max Discount Amount</th>
                        <th>Created On</th>
                        <th class="text-end"> Action </th>
                      </tr>
                    </thead>
                    <tbody>
                      <%newCouponList.forEach(function(item,index) { %>
      
                      <tr>
                        <td><%=index + 1%></td>
                        <td><%=item.couponCode%></td>
                        <td><%=item.minOrderValue%></td>
                        <td><%=item.discountPercentage%>%</td>
                        <td>â‚¹<%=item.maxDiscountAmount%></td>
                        <td><%=item.createdOn.toLocaleDateString()%></td>
                      
                        <td class="text-end">
                          <button class="btn-sm btn-danger" onclick="removeCoupon('<%=item._id%>')">Remove</button>
                        </td>
                      </tr>
      
                      <% }); %>
                    </tbody>
                  </table>
                </div> <!-- table-responsive.// -->
              </div> <!-- col end// -->
      
            </div> <!-- row end// -->
          </div> <!-- card-body // -->
        </div> <!-- card end// -->
      </section>
      
      <script>
        
        //to remove the Coupon
    
      </script>
      <script>
        function removeCoupon(couponId){
      $.ajax({
        url : '/admin/removeCoupon',
        method : 'delete',
        data : {
          couponId : couponId
        },
        success: (response) => {
                if (response.status) {
                  location.reload()
                }
              }
        
        
      })
      
     }
    </script>


